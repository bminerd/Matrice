{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Matrice_Test_App - Docker build",
            "type": "shell",
            "linux": {
                "command": "${workspaceRoot}/docker_bash.sh Tests/Matrice_Test_App/build.sh",
            },
            "windows": {
                "command": ""
              },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Matrice_Test_App - Docker Debug",
            "type": "shell",
            "linux": {
              "command": "${workspaceRoot}/docker_bash.sh Tests/Matrice_Test_App/debug.sh"
            },
            "windows": {
                "command": ""
            },
            "isBackground": true,
            "problemMatcher": [
                {
                  "pattern": [
                    {
                      "regexp": ".",
                      "file": 1,
                      "location": 2,
                      "message": 3
                    }
                  ],
                  "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": ".",
                  }
                }
              ]
        }
    ]
}